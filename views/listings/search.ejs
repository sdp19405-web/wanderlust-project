            <label class="form-check-label" for="switchCheckDefault">Display taxes</label>
            </div>
        </div>
    </div>


<h2 class="mt-4">Search Results</h2>

<% if (all_listings.length === 0) { %>
    <p class="text-muted mt-3">No listings found for your search.</p>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <% for(let listing of all_listings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="listing-card card col" style="width: 20rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            Price: â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-info"> &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>